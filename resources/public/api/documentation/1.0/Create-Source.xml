<endpoint>
    <name>Create Source of Income</name>
    <description>This endpoint creates a source of income</description>
    <section id="resource">
        <title>Resource</title>
        <resource>POST /self-assessment/{utr}/{taxYear}/{source}</resource>
    </section>
    <section id="path-parameters">
        <title>Path Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>utr</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2234567890</code>
                    </cell>
                    <cell>The Self Assessment UTR of the customer</cell>
                </row>
                <row>
                    <cell>
                        <code>taxYear</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2016-17</code>
                    </cell>
                    <cell>The tax year the data applies to</cell>
                </row>
                <row>
                    <cell>
                        <code>source</code>
                    </cell>
                    <cell>
                        <code>Enum</code>
                    </cell>
                    <cell>
                        <code>self-employments</code>
                    </cell>
                    <cell>The type of source to create</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="request-headers">
        <title>Request Headers</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Value</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>Accept</code>
                    </cell>
                    <cell>
                        <code>application/vnd.hmrc.1.0+json</code>
                    </cell>
                </row>
                <row>
                    <cell>
                        <code>Content-Type</code>
                    </cell>
                    <cell>
                        <code>application/json</code>
                    </cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>write:self-assessment</scope>
        </authorisation>
    </section>
    <section id="sample-request">
        <title>Self-Employment Request</title>
        <resource>POST /self-assessment/2234567890/2016-17/self-employments</resource>
        <json>
<![CDATA[{
    "name": "Awesome Plumbers",
    "commencementDate": "2016-04-06",
    "allowances": {
        "annualInvestmentAllowance": 1000.00,
        "capitalAllowanceMainPool": 150.00,
        "capitalAllowanceSpecialRatePool": 5000.50,
        "restrictedCapitalAllowance": 400.00,
        "businessPremisesRenovationAllowance": 600.00,
        "enhancedCapitalAllowance": 50.00,
        "allowancesOnSales": 3399.99
    }
}]]>
        </json>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>name</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>Awesome Plumbers</code>
                    </cell>
                    <cell>Name of the business. Max length 100 characters.</cell>
                </row>
                <row>
                    <cell>
                        <code>commencementDate</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2016-04-06</code>
                    </cell>
                    <cell>The commencement date of the business in YYYY-MM-DD format.</cell>
                </row>
                <row>
                    <cell>
                        <code>allowances</code>
                    </cell>
                    <cell>
                        <code>Object</code>
                    </cell>
                    <cell>
                        <code>N/A</code>
                    </cell>
                    <cell>Optional</cell>
                </row>
                <row>
                    <cell>
                        <code>annualInvestmentAllowance</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>1000.00</code>
                    </cell>
                    <cell>Optional. The amount of annual investment allowance being claimed as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>capitalAllowanceMainPool</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>150.00</code>
                    </cell>
                    <cell>Optional. The amount of capital allowance being claimed in the main pool as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>capitalAllowanceSpecialRatePool</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>5000.50</code>
                    </cell>
                    <cell>Optional. The amount of capital allowance being claimed in the special rate pool as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>restrictedCapitalAllowance</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>400.00</code>
                    </cell>
                    <cell>Optional. The amount of restricted capital allowance being claimed as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>businessPremisesRenovationAllowance</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>600.00</code>
                    </cell>
                    <cell>Optional. The amount of business premises renovation allowance being claimed as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>enhancedCapitalAllowance</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>50.00</code>
                    </cell>
                    <cell>Optional. The amount of enhanced capital allowance being claimed as a positive number with up to 2 decimal places</cell>
                </row>
                <row>
                    <cell>
                        <code>allowancesOnSales</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>3399.99</code>
                    </cell>
                    <cell>Optional. The amount of allowances on sales being claimed as a positive number with up to 2 decimal places</cell>
                </row>
            </rows>
        </table>
    </section>
