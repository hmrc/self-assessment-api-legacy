<endpoint>
    <name>Create Summary</name>
    <description>This endpoint creates a summary for the specified source</description>
    <section id="resource">
        <title>Resource</title>
        <resource>POST /self-assessment/{utr}/{taxYear}/{source}/{sourceId}/{summary}</resource>
    </section>
    <section id="path-parameters">
        <title>Path Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>utr</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2234567890</code>
                    </cell>
                    <cell>The Self Assessment UTR of the customer</cell>
                </row>
                <row>
                    <cell>
                        <code>taxYear</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2016-17</code>
                    </cell>
                    <cell>The tax year the data applies to</cell>
                </row>
                <row>
                    <cell>
                        <code>source</code>
                    </cell>
                    <cell>
                        <code>Enum</code>
                    </cell>
                    <cell>
                        <code>self-employments</code>
                    </cell>
                    <cell>The type of source</cell>
                </row>
                <row>
                    <cell>
                        <code>sourceId</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>5728b53c4800005100d2d32d</code>
                    </cell>
                    <cell>The source id</cell>
                </row>
                <row>
                    <cell>
                        <code>summary</code>
                    </cell>
                    <cell>
                        <code>Enum</code>
                    </cell>
                    <cell>
                        <code>incomes, expenses</code>
                    </cell>
                    <cell>The type of summary</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="request-headers">
        <title>Request Headers</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Value</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>Accept</code>
                    </cell>
                    <cell>
                        <code>application/vnd.hmrc.1.0+json</code>
                    </cell>
                </row>
                <row>
                    <cell>
                        <code>Content-Type</code>
                    </cell>
                    <cell>
                        <code>application/json</code>
                    </cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>write:self-assessment</scope>
        </authorisation>
    </section>
    <section id="sample-request-expenses">
        <title>Sample Expenses Request</title>
        <resource>POST /self-assessment/2234567890/2016-17/self-employments/5728b53c4800005100d2d32d/expenses</resource>
        <description>Create an expense for the specified source</description>
        <json>
<![CDATA[{
    "type": "TravelCosts",
    "amount": 7777.00
}]]>
        </json>
        <table>
            <headings>
                <cell>Source</cell>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>self-employments</code>
                    </cell>
                    <cell>
                        <code>type</code>
                    </cell>
                    <cell>
                        <code>Enum</code>
                    </cell>
                    <cell>
                        <code>CoGBought, CISPayments, StaffCosts, TravelCosts, PremisesRunningCosts, MaintenanceCosts, AdminCosts,
                            AdvertisingCosts, Interest, FinancialCharges, BadDebt, ProfessionalFees, Depreciation, Other</code>
                    </cell>
                    <cell>The type of expense</cell>
                </row>
                <row>
                    <cell>
                        <code>All</code>
                    </cell>
                    <cell>
                        <code>amount</code>
                    </cell>
                    <cell>
                        <code>Number</code>
                    </cell>
                    <cell>
                        <code>7777.00</code>
                    </cell>
                    <cell>The amount of the expense as a positive number with up to 2 decimal places</cell>
                </row>
            </rows>
        </table>
    </section>
        <section id="sample-request-incomes">
            <title>Sample Incomes Request</title>
            <resource>POST /self-assessment/2234567890/2016-17/self-employments/5728b53c4800005100d2d32d/incomes</resource>
            <description>Create an income for the specified source</description>
            <json>
<![CDATA[{
    "type": "Turnover",
    "amount": 60000.00
}]]>
            </json>
            <table>
                <headings>
                    <cell>Source</cell>
                    <cell>Name</cell>
                    <cell>Type</cell>
                    <cell>Example</cell>
                    <cell>Description</cell>
                </headings>
                <rows>
                    <row>
                        <cell>
                            <code>self-employments</code>
                        </cell>
                        <cell>
                            <code>type</code>
                        </cell>
                        <cell>
                            <code>Enum</code>
                        </cell>
                        <cell>
                            <code>Turnover, Other</code>
                        </cell>
                        <cell>The type of income</cell>
                    </row>
                    <row>
                        <cell>
                            <code>All</code>
                        </cell>
                        <cell>
                            <code>amount</code>
                        </cell>
                        <cell>
                            <code>Number</code>
                        </cell>
                        <cell>
                            <code>60000.00</code>
                        </cell>
                        <cell>The amount of the income as a positive number with up to 2 decimal places</cell>
                    </row>
                </rows>
            </table>
        </section>
        <section id="sample-response">
            <title>Sample Response</title>
            <httpStatus>201 (CREATED)</httpStatus>
            <json>
<![CDATA[{
    "_links": {
        "self": {
        "href": "/self-assessment/2234567890/2016-17/self-employments/5728b53c4800005100d2d32d/incomes/5728b53c4800005100d2d98a"
        }
    }
}]]>
            </json>
        </section>
</endpoint>
