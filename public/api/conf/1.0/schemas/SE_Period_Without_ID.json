{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Period",
  "properties": {
    "from": {
      "title": "From date",
      "description": "Start date for the period",
      "$ref": "FullDate.json"
    },
    "to": {
      "title": "To date",
      "description": "End date for the period",
      "$ref": "FullDate.json"
    },
    "incomes": {
      "$ref": "self-employment/Incomes.json"
    },
    "oneOf": [
      {
        "expenses": {
            "$ref": "self-employment/Expenses.json"
         },
        "consolidatedExpenses" : {
          "title" : "Consolidated expenses",
          "description" : "Sum of all expenses for the specified period",
          "type": "number",
          "multipleOf": 0.01,
          "minimum": 0,
          "maximum": 99999999999999.98,
          "example": "1000.45"
        }
      }
    ]
  },
  "required": [
    "from",
    "to"
  ],
  "additionalProperties": false
}
