@import uk.gov.hmrc.domain.Nino
@import uk.gov.hmrc.selfassessmentapi.controllers.api._
@import uk.gov.hmrc.selfassessmentapi.views.Helpers._

@(nino: Nino, taxYear: TaxYear, sourceType : SourceType, summaryType: Option[SummaryType], sourceId: Option[SourceId], summaryId: Option[SummaryId])
<section id="path-parameters">
    <title>Path Parameters</title>
    <table>
        <headings>
            <cell>Name</cell>
            <cell>Type</cell>
            <cell>Description</cell>
        </headings>
        <rows>
            @basePathParams(nino, Some(taxYear))
            @sourceId.map { sId =>
                <row>
                    <cell>
                        <code>@{sourceType.name}-id</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>The @{sourceType.name} id</cell>
                </row>
                @summaryType.map { st =>
                    @summaryId.map { id =>
                        <row>
                            <cell>
                                <code>@{st.name}-id</code>
                            </cell>
                            <cell>
                                <code>String</code>
                            </cell>
                            <cell>The @{st.name} id</cell>
                        </row>
                    }
                }
            }
        </rows>
    </table>
</section>
