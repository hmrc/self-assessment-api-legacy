{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Self-employment source of income",
  "type": "object",
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique identifier",
      "type": "string"
    },
    "name": {
      "title": "Business name",
      "description": "The business name - unless it is your own name, in which case, put your own name",
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "description": {
      "title": "Description of the business",
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "address": {
      "type": "object",
      "properties": {
        "line_1": {
          "title": "Line 1",
          "description": "First line of your business address - unless you work from home",
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
          "postcode": {
            "title": "Postcode",
            "description": "Postcode of your business address",
            "type": "string",
            "minLength": 1,
            "maxLength": 8
          }
      },
      "required": [
        "line_1",
        "postcode"
      ],
      "additionalProperties": false
    },
    "commencementDate": {
      "title": "Business start date",
      "description": "Business start date",
      "type": "string",
      "format": "date"
    },
    "accountingPeriod": {
      "$ref": "http://localhost:9001/api/conf/1.0/schemas/AccountingPeriod.json"
    },
    "accountingType": {
      "title": "Accounting type",
      "description": "CASH if you used the cash basis, money actually received and paid out, to calculate your income and expenses. Otherwise ACCRUAL.",
      "type": "string",
      "enum": [
        "CASH",
        "ACCRUAL"
      ]
    },
    "basisPeriod": {
      "$ref": "http://localhost:9001/api/conf/1.0/schemas/BasisPeriod.json"
    },
    "specialArrangmentsApply": {
      "title": "Special arrangments apply",
      "description": "If special arrangements apply",
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "description",
    "commencementDate",
    "accountingPeriod",
    "accountingType"
  ],
  "additionalProperties": false
}
