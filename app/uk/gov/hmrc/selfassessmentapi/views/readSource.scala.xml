    <section id="resource">
        <title>Resource</title>
        <resource><![CDATA[GET /self-assessment/{utr}/{tax-year}/@{sourceType.name}/{@{sourceType.name}-id}]]></resource>
    </section>
    @partials.sourcePathParams(nino, taxYear, sourceType, None, Some(sourceId), None)
    @partials.requestHeaders(false)
    @partials.authorisation(false)
    @partials.sourceReadResponse(nino, taxYear, sourceType, sourceId)
</endpoint>
