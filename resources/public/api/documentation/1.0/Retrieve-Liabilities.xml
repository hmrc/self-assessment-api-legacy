<endpoint>
    <name>Retrieve Liabilities</name>
    <description>This endpoint retrieves liabilities for a given utr</description>
    <section id="resource">
        <title>Resource</title>
        <resource>GET /self-assessment/{utr}/liabilities</resource>
    </section>
    <section id="path-parameters">
        <title>Path Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell><code>utr</code></cell>
                    <cell><code>String</code></cell>
                    <cell><code>2234567890</code></cell>
                    <cell>The Self Assessment UTR of the customer</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="request-headers">
        <title>Request Headers</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Value</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>Accept</code>
                    </cell>
                    <cell>
                        <code>application/vnd.hmrc.1.0+json</code>
                    </cell>
                </row>
            </rows>
        </table>
    </section>

    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>read:self-assessment-api</scope>
        </authorisation>
    </section>
    <section id="sample-response">
        <title>Response</title>
        <httpStatus>200 (OK)</httpStatus>
        <json><![CDATA[{
                  "_links": {
                    "self": {
                      "href": "/self-assessment/1097172564/liabilities"
                    }
                  },
                  "_embedded": {
                    "liabilities": [
                      {
                        "_links": {
                          "self": {
                            "href": "/self-assessment/1097172564/liabilities/1234"
                          }
                        }
                      },
                      {
                        "_links": {
                          "self": {
                            "href": "/self-assessment/1097172564/liabilities/4321"
                          }
                        }
                      },
                      {
                        "_links": {
                          "self": {
                            "href": "/self-assessment/1097172564/liabilities/7777"
                          }
                        }
                      }
                    ]
                  }
                }]]>
        </json>
    </section>
</endpoint>